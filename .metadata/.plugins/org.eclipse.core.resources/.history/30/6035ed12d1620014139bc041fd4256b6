#ifndef DINERMENU_H_
#define DINERMENU_H_

#include "Menu.h"
#include "MenuItems.h"

class DinerMenu: public Menu {
public:
	DinerMenu()
	{
		numberOfItems = 0;
	}
	~DinerMenu(){}

	void addItem( string name, string description, bool veggie, double price )
	{
		if( numberOfItems < MAX_ITEMS )
		{
			menuItems[numberOfItems]
		}
	}
private:
	int numberOfItems;
	const int MAX_ITEMS = 4;
	MenuItems *menuItems;
};

#endif /* DINERMENU_H_ */
