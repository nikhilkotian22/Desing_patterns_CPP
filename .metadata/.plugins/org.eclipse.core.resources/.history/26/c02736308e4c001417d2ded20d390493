static ChocolateBoiler* getInstance()
{
	if(ChocolateBoiler::boilerInstance == NULL)
	{
		ChocolateBoiler::boilerInstance = new ChocolateBoiler();
	}
	else
	{
		cout<<"Returning old instance"<<endl;
	}
	return ChocolateBoiler::boilerInstance;
}



