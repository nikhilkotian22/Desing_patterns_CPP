#ifndef MENUCOMPONENT_H_
#define MENUCOMPONENT_H_

#include<string>
using namespace std;
class MenuComponent {
public:
	MenuComponent(){}
	~MenuComponent(){}

	virtual void add(MenuComponent* menuObj) = 0;

	virtual void remove(MenuComponent* menuObj) = 0;

	virtual MenuComponent* getChild(int counter) = 0;

	virtual string getName()=0;

	virtual string getDescription() = 0;

	virtual void string getPrice() =0;

	virtual void bool isVegetarian() = 0;


	virtual void print()

};

#endif /* MENUCOMPONENT_H_ */
