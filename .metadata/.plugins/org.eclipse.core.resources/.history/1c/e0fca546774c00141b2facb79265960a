#ifndef CHEESEPIZZA_H_
#define CHEESEPIZZA_H_

#include "Pizza.h"
#include<iostream>
using namespace std;

class CheesePizza: public Pizza {
public:
	CheesePizza()
	{

	}
	~CheesePizza()
	{

	}

	virtual void prepare()
	{
		cout<<"Preparing Cheese pizza"
	}
		virtual void bake() = 0;
		virtual void cut() = 0;
		virtual void box() = 0;
};

#endif /* CHEESEPIZZA_H_ */
