#ifndef DINERMENUITERATOR_H_
#define DINERMENUITERATOR_H_

#include "MyIterator.h"
#include "MenuItems.h"
#include "DinerMenu.h"

class DinerMenuIterator: public MyMenuIterator {
public:
	DinerMenuIterator(MenuItems** menuObj, int size){
		menu = menuObj;
		position = 0;
		this->size = size;
	}
	~DinerMenuIterator(){}
	virtual bool hasNext()
	{
		bool present = true;
		if( size < position )
		{
			present = false;
		}
		return present;
	}
	virtual MenuItems* next()
	{
		MenuItems* menuitemobj = NULL;
		if( size < position )
		{
			position++;
			menuitemobj = *menu[position];
		}
		return menuitemobj;
	}

private:
	MenuItems** menu;
	int position;
	int size;
};

#endif /* DINERMENUITERATOR_H_ */
