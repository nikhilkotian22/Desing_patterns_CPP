#ifndef GUMBALLMACHINE_H_
#define GUMBALLMACHINE_H_

#include "NoQuarter.h"

class GumBallMachine {
public:
	GumBallMachine()
	{
		noQuarterState = new NoQuarter(this);

		state = noQuarterState;
	}
	~GumBallMachine() {}
private:
	GumBallState* noQuarterState;

	GumBallState* state;
};

#endif /* GUMBALLMACHINE_H_ */
